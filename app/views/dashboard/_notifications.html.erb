<h3>Notifications (<%= @unread_notifications.length %>)</h3>
<div class="panel panel-default">
	<div class="list-group">
		<% if @unread_notifications.empty? %>
			<div class="list-group-item">
				<div class="notification-body">
					<h4>No new notifications at the moment.</h4>
				</div>
			</div>
		<% else %>
			<% @unread_notifications.each do |notification| %>
				<div class="list-group-item">
					<div class="notification-body">
						<h4><%= notification.title %></h4>
						<p><%= notification.content %></p>
						<p><%= link_to 'Show me', notification.resolve_link %></p>
					</div>
					<%= link_to 'Mark as read', dismiss_notification_path(notification.id), class:"btn btn-primary pull-right", method: :post %>
				</div>
			<% end %>
		<% end %>
	</div>
</div>

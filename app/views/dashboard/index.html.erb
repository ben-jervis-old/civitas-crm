<div class="page-header">
  <h1>St Mark's Anglican Church</h1>
</div>

<%= render 'cards' %>
<div class="row padded-row">
	<h2>Notifications</h2>
	<div class="panel panel-default">
		<div class="list-group">
			<% if current_user.notifications.empty? %>
				<div class="list-group-item">
					<div class="notification-body">
						<h4>No notifications at this time for user</h4>
						<h3><%= @current_user.id %><h3>
					</div>
				</div>
			<% else %>
				<% current_user.notifications.each do |notification| %>
					<div class="list-group-item">
						<div class="notification-body">
							<h4><%= @notification.title %></h4>
							<p><%= @notification.content %></p>
							<p>click <%= link_to 'here', notification.resolve_link %> to acccept task</p>
						</div>
						<%= link_to 'Mark as read', dismiss_notification_path(@task), class:"btn btn-primary pull-right", method: :post %>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>

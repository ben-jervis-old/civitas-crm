<!DOCTYPE html>
<html>
  <head>
    <title>CivitasCRM</title>
    <%= csrf_meta_tags %>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'logo-inverse.png', type: 'image/png' %>
  </head>

  <body>
    <%= render 'partials/navbar' %>
    <div class="container-fluid">
      <div class="row" id="main-body-div">
        <%= render 'partials/sidebar' unless @hide_sidebar %>
        <div id="<%= @hide_sidebar ? '' : 'content-div' %>">
          <div class="container-fluid">
            <% flash.each do |message_type, message| %>
              <div class="flash-alert alert alert-<%= message_type %>"><%= message %></div>
            <% end %>
            <%= yield %>
		      </div>
        </div>
        <%= render 'partials/tabmenu' unless @hide_sidebar %>
      </div>
    </div>

  </body>
</html>

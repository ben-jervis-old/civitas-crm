<div class="row <%= logged_in? ? 'regular-flash' : 'external-flash' %>" id='flash-holder'>
	<% flash.each do |message_type, message| %>
		<div class="<%= "col-md-4 col-md-offset-4" if !logged_in? %> flash-alert alert alert-<%= message_type %> alert-dismissable fade in <%= 'alert-timeout' if logged_in? %>">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
			<%= message %>
		</div>
	<% end %>
</div>

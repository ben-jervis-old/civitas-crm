<div class="row" id='flash-holder'>
	<% flash.each do |message_type, message| %>
		<div class="<%= "col-md-4 col-md-offset-4" if @hide_sidebar %> flash-alert alert alert-<%= message_type %> alert-dismissable fade in <%= 'alert-timeout' unless @hide_sidebar %>">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
			<%= message %>
		</div>
	<% end %>
</div>

<% provide(:title, "Members") %>
<div class="page-header">
	<h1>Member Database</h1>
</div>

<ol class="breadcrumb">
	<li class='active'>Members</li>
</ol>

<div class="row bounded-row">

	<!-- Button for mobile -->
	<div class="col-md-1 visible-sm-block visible-xs-block padded-row">
		<%= link_to new_user_path, class: "btn btn-primary btn-lg btn-block visible-xs-block visible-sm-block" do %>
			<i class="glyphicon glyphicon-plus"></i> New Member
		<% end %>
	</div>

	<div class="col-md-6">
		<div class="input-group">
			<input type="text" id='username-search-bar' name="user-search" value="" class="form-control" placeholder="Search">
			<span class="input-group-btn">
				<button class="btn btn-default">
					<i class="fa fa-search"></i>
				</button>
			</span>
		</div>
	</div>

	<!-- Button for desktop -->
	<div class="col-md-1 col-md-offset-5 hidden-sm hidden-xs">
		<%= link_to new_user_path, class: "btn btn-primary pull-right" do %>
			<i class="glyphicon glyphicon-plus"></i> New Member
		<% end %>
	</div>

</div>

<div class="row">
	<div class="col-md-12">
		<ul class="list-group">
			<%= render @users %>

			<!-- Render some test users to pad the list -->
			<% (1..150).each do |num| %>
			<% rand_str = (0...8).map { (65 + rand(26)).chr }.join %>
					<div class="list-group-item col-md-4" data-username='<%= rand_str %>' data-type='user-list-item'>
						<h4>
							<%= link_to "Test User #{num} > #{rand_str}", '#', class: 'name' %>
							<%= link_to '#Show', class: 'picture-sym' do %>
								<i class="glyphicon glyphicon-picture pull-right"></i>
							<% end %>
						</h4>
					</div>
			<% end %>
		</ul>
	</div>
</div>

<% provide(:title, "Members") %>
<div class="page-header">
	<h1>Member Database</h1>
</div>

<div class="row bounded-row">
	<div class="col-md-1 visible-sm-block visible-xs-block padded-row">
		<%= link_to new_roster_path, class: "btn btn-primary btn-lg btn-block visible-xs-block visible-sm-block" do %>
			<i class="glyphicon glyphicon-plus"></i> New Member 1
		<% end %>
	</div>
	<div class="col-md-6">
		<div class="input-group">
			<input type="text" id='username-search-bar' name="user-search" value="" class="form-control" placeholder="Search">
			<span class="input-group-btn">
				<button class="btn btn-default">
					<i class="glyphicon glyphicon-search"></i>
				</button>
			</span>
		</div>
	</div>
	<div class="col-md-1 col-md-offset-5 hidden-sm hidden-xs">
		<%= link_to new_user_path, class: "btn btn-primary pull-right" do %>
			<i class="glyphicon glyphicon-plus"></i> New Member 2
		<% end %>
	</div>
</div>


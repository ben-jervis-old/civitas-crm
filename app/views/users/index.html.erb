<div class="row padded-row">
	<ul class="list-group">
		<%= render @users %>
		<% (1..150).each do |num| %>
		<% rand_str = (0...8).map { (65 + rand(26)).chr }.join %>
				<div class="list-group-item col-md-4" data-username='<%= rand_str %>' data-type='user-list-item'>
					<h4>
						<%= link_to "Test User #{num} > #{rand_str}", '#', class: 'name' %>
						<%= link_to '#Show', class: 'picture-sym' do %>
							<i class="glyphicon glyphicon-picture pull-right"></i>
						<% end %>
					</h4>
				</div>
		<% end %>
	</ul>
</div>

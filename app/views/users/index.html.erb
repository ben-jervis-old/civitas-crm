<% provide(:title, "Members") %>
<div class="page-header">
	<h1>Member Database</h1>
</div>

<div class="row bounded-row">
	<div class="col-md-1 visible-xs-block padded-row">
		<%= link_to new_roster_path, class: "btn btn-primary btn-lg btn-block visible-xs-block" do %>
			<i class="glyphicon glyphicon-plus"></i> New Member
		<% end %>
	</div>
	<div class="col-md-4">
		<div class="input-group">
			<input type="text" name="user-search" value="" class="form-control" placeholder="Search">
			<span class="input-group-btn">
				<button class="btn btn-default">
					<i class="glyphicon glyphicon-search"></i>
				</button>
			</span>
		</div>
	</div>
	<div class="col-md-1 col-md-offset-7 hidden-xs">
		<%= link_to new_user_path, class: "btn btn-primary pull-right" do %>
			<i class="glyphicon glyphicon-plus"></i> New Member
		<% end %>
	</div>
</div>
	<div class="list-group row ">
		<%= render @users %>
		<% (1..15).each do |num| %>
			<div class="col-md-4">
				<div class="list-group-item">
					<h4>
						<%= link_to "Test User #{num}", '#' %>
						<%= link_to '#Show', class: 'picture-sym' do %>
							<i class="glyphicon glyphicon-picture pull-right"></i>
						<% end %>
					</h4>
				</div>
			</div>
		<% end %>
	</div>

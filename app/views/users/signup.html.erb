<% provide(:title, 'Register') %>
<div id="login-page-wrapper">
  <div class="page-header">
    <h1>Sign Up</h1>
  </div>
  <%= form_for @user, url: { action: :signup_create } do |f| %>
    <%= render 'partials/error_messages', item: @user %>

    <div class="form-group">
      <%= f.label :first_name, "Name" %>
      <div class="row">
        <div class="col-md-6">
          <%= f.text_field :first_name, class: 'form-control', placeholder: "First Name" %>
        </div>

        <div class="gap-spacer visible-sm-block visible-xs-block"></div>
        <div class="gap-spacer visible-sm-block visible-xs-block"></div>

        <div class="col-md-6">
          <%= f.text_field :last_name, class: 'form-control', placeholder: "Last Name" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', tabindex: 1 %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', tabindex: 2 %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control', tabindex: 2 %>
    </div>

    <%= f.submit 'Sign Up', class: 'btn btn-primary btn-lg btn-block', tabindex: 4 %>
  <% end %>
  <p>
    Already have an account? <%= link_to 'Log in here', login_path %>
  </p>
</div>

<%= form_for(@roster) do |f| %>

<%= render 'partials/error_messages', item: @roster %>

	<div class="form-group row">
		<%= f.label :title %>
		<%= f.text_field :title, class: 'form-control' %>
	</div>

	<div class="form-group row">
		<%= f.label :start_date %>
		<%= f.date_field :start_date, class: 'form-control' %>
	</div>

	<div class="form-group row">
		<%= f.label :duration, 'Duration (days)' %>
		<%= f.number_field :duration, class: 'form-control' %>
	</div>

	<div class="form-group row">
		<%= f.label :description %>
		<%= f.text_area :description, class: 'form-control' %>
	</div>

	<div class="row">
		<%= f.submit "Save", class: "btn btn-primary" %>
		<%= link_to 'Cancel', @cancel_path, class: 'btn btn-default pull-right' %>
	</div>
<% end %>

<div class="page-header <%= 'tall-margin' unless flash.empty? %>">
	<h1>Contacts</h1>
</div>

<div class="row padded-row">
	<div class="row justify-content-md-center">
		<%= render "actions" %>
	</div>

	<div class="row justify-content-md-center list-group">
		<div class="col-md-6 list-group">
			<%= render @messages %>
		</div>
	
  	<div class="col-md-6">
    	<%= form_for @message do |f| %>
        <div class="row">
          <div class="form-group col-md-12">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div>
      
        <div class="row">
          <div class="form-group col-md-12">
            <%= f.label :content %>
            <%= f.trix_editor :content, class: 'form-control' %>
          </div>
        </div>
      
        <div class="row">
      		<div class="col-sm-12">
      			<%= f.submit "Save Message", class: "btn btn-primary  pull-right" %>
      			<%= link_to 'Cancel', messages_path, class: 'btn btn-default'%>
      		</div>
      	</div>
      <% end %>
    </div>
	</div>
</div>


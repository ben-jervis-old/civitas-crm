<div class="page-header <%= 'tall-margin' unless flash.empty? %>">
  <h1>Message: <%= @message.title %> </h1>
</div>

<ol class="breadcrumb">
	<li><%= link_to "Contacts", messages_path %></li>
	<li><%= link_to @message.title, @message %></li>
	<li><%= link_to "Edit", @message %></li>
	<li class='active'>Recipients</li>
</ol>

<div class="row padded-row">
  <%= link_to @message, class: "btn btn-default pull-right" do %>
		<i class="glyphicon glyphicon-chevron-left"></i> Back To Contact Page
	<% end %>
</div>

<div class="narrow-container">
	<div class="row padded-row">
		<h4>Recipients</h4>
		<div class="panel panel-default">
			<table class="table">
				<% if @message.users.size > 0 %>
				  <% @message.users.each do |user| %>
            	<div class="list-group-item col-md-4">
            		<h4>
                  <%= link_to user.name, user %>
                  <%= link_to message_unassign_user_path(@group.id, user.id), class: 'btn btn-default pull-right', method: :post do %>
										<i class="glyphicon glyphicon-minus"></i> Remove
									<% end %>
                </h4>
            	</div>
          <% end %>
				<% else %>
					<td>There are no recipients assigned to this message yet.</td>
				<% end %>
			</table>
		</div>
	</div>

	<div class="row padded-row">
		<div class="row bounded-row">
			<div class="col-md-4">
				<h4>All members</h4>
			</div>
			<div class="col-md-4 pull-right">
				<div class="input-group">
					<input type="text" id="groups-search-bar" name="groups-search" value="" class="form-control" placeholder="Search">
					<span class="input-group-btn">
						<button class="btn btn-default">
							<i class="glyphicon glyphicon-search"></i>
						</button>
					</span>
				</div>
			</div>
		</div>


		<div class="panel panel-default">
			<table class="table">
			  <% @users.each do |user| %>
			  	<% if !@message.user_ids.include?(user.id) %>
          	<div class="list-group-item col-md-4" data-groupname="<%= user.name %>">
          		<h4>
                <%= link_to user.name, user %>
								<%= link_to message_assign_user_path(@message.id, user.id), class: 'btn btn-default pull-right', method: :post do %>
									<i class="glyphicon glyphicon-plus"></i> Add
								<% end %>
              </h4>
          	</div>
          <% end %>
        <% end %>
			</table>
		</div>
	</div>
</div>

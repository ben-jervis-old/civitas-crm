<%= form_for(@message) do |f| %>
	<%= render 'partials/error_messages', item: @message %>
	
	<div class="row">
	  <div class="form-group col-md-12">
	    <%= f.label 'To' %>
  		<script type="text/javascript">
  		$(".js-recipients-multiple").select2();
  		</script>
  		
  		<select class="js-recipients-multiple col-md-12" multiple="multiple">
        <% @users.each do |user| %>
          <option value="<%= user.id %>"><%= user.first_name %></option>
        <% end %>
      </select>
  	</div>
	</div>
	
	<div class="row">
    <div class="form-group col-md-12">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-12">
      <%= f.label :content %>
      <%= f.trix_editor :content, class: 'form-control', overflow: 'auto'%>
    </div>
  </div>

  <div class="row">
		<div class="col-sm-12">
			<%= f.submit "Save Changes", class: "btn btn-primary  pull-right" %>
			<%= link_to 'Cancel', messages_path, class: 'btn btn-default'%>
		</div>
	</div>
<% end %>

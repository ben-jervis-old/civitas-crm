<div class="panel panel-default">
  <table class="table">
    <tr>
      <td><strong>From: </strong></td>
      <td><%= mess.sender.name %></td>
      <td><strong>Time sent: </strong></td>
      <td><%= mess.sent_at %></td>
    </tr>
    <tr>
      <td><strong>To: </strong></td>
      <td colspan=3><%= if mess.receiver then mess.receiver.name else "<i>No recipient</i>".html_safe end %></td>
    </tr>
    <tr>
      <td><strong>Subject: </strong></td>
      <td><%= mess.title %></td>
    </tr>
    <tr>
      <td colspan=4>
        <%= mess.content.html_safe %>
      </td>
    </tr>
  </table>
</div>
<div class="btn-group pull-right">
  <%= link_to message_reply_path(mess), class: "btn btn-default", method: :post do %>
    <%= fa_icon 'reply' %> Reply
  <% end %>
  <%= link_to message_forward_path(mess), class: "btn btn-default", method: :post do %>
    <%= fa_icon 'share' %> Forward
  <% end %>
  <%= link_to @message, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-default" do %>
    <%= fa_icon 'trash' %> Delete
  <% end %>
  <%= link_to message_unread_path(mess), class: "btn btn-default", method: :post do %>
    <%= fa_icon 'envelope-open' %> Mark Unread
  <% end %>
</div>

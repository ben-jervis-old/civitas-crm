<div class="page-header">
	<h1>Update group information</h1>
</div>

<ol class="breadcrumb">
	<li><%= link_to "Groups", groups_path , data: { confirm: "Cancel will delete all change. Are you sure?" }%></li>
	<li><%= link_to @group.name, @group , data: { confirm: "Cancel will delete all change. Are you sure?" }%></li>
	<li class='active'>edit</li>
</ol>

<div class="row bounded-row padded-row">
  <div class="col-md-8">
    <%= form_for(@group) do |f| %>
			<%= render 'partials/error_messages' %>
	    <div class="form-group row">
	      <%= f.label :name %>
	      <%= f.text_field :name, class: 'form-control' %>
	    </div>
	    
	    <div class="form-group row">
	      <%= f.label :group_type %>
	      <%= f.text_field :group_type, class: 'form-control' %>
	    </div>
	    
	    <div class="form-group row">
	      <%= f.label :description %>
	      <%= f.text_field :description, class: 'form-control' %>
	    </div>

			<div class="row">
				<%= f.submit "Save changes", class: "btn btn-primary" %>
				<%= link_to 'Cancel', @group , data: { confirm: "Cancel will delete all change. Are you sure?" }, class: 'btn btn-default pull-right'%>
			</div>
    <% end %>
  </div>
</div>

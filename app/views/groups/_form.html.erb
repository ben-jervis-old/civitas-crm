<%= form_for(@group) do |f| %>
	<%= render 'partials/error_messages' %>
	<div class="row">
		<div class="form-group col-sm-6">
			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>
		</div>

		<div class="form-group col-sm-6">
			<%= f.label :group_type %>
			<%= f.text_field :group_type, class: 'form-control' %>
		</div>
	</div>

	<div class="row">
		<div class="form-group col-sm-12">
			<%= f.label :description %>
			<%= f.text_area :description, class: 'form-control', rows: 4 %>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12">
			<%= f.submit "Save Changes", class: "btn btn-primary  pull-right" %>
			<%= link_to 'Cancel', @cancel_path, class: 'btn btn-default'%>
		</div>
	</div>
<% end %>
